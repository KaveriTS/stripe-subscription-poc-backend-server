# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/subscription-poc

# Stripe Account A (Subscription Management)
STRIPE_A_PUBLISHABLE_KEY=pk_test_your_stripe_a_publishable_key_here
STRIPE_A_SECRET_KEY=sk_test_your_stripe_a_secret_key_here
STRIPE_A_WEBHOOK_SECRET=whsec_your_stripe_a_webhook_secret_here

# Stripe Account B (Payment Processing)
STRIPE_B_PUBLISHABLE_KEY=pk_test_your_stripe_b_publishable_key_here
STRIPE_B_SECRET_KEY=sk_test_your_stripe_b_secret_key_here

# Email Configuration (for retry notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourcompany.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
